<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pack.KoDarit">
   <children>
      <VBox alignment="CENTER" layoutX="200.0" layoutY="50.0" prefHeight="300.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label text="Ko darīsi?">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="putInStockFX" mnemonicParsing="false" onAction="#chooseCustomerIn" prefWidth="170.0" text="Ielikt noliktavā" />
            <Button fx:id="pullOutOfStockFX" mnemonicParsing="false" onAction="#chooseCustomerOut" prefWidth="170.0" text="Izņemt no noliktavas" />
            <Button fx:id="viewStockFX" mnemonicParsing="false" onAction="#viewStock" prefWidth="170.0" text="Skatīt krājumus" />
            <Button fx:id="newCustomerFX" mnemonicParsing="false" onAction="#newCustomer" prefWidth="170.0" text="Pielikt jaunu klientu">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitFX" mnemonicParsing="false" onAction="#handleCloseButtonAction" prefWidth="170.0" text="Beigt darbu" />
         </children>
      </VBox>
   </children>
</AnchorPane>
